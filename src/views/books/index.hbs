<link rel="stylesheet" href="/css/book.css">
<div class="container">
    <div class="d-flex justify-content-between">
        <div>
            <h3>Books</h3>
        </div>
        <div>

            <button type="button" class="btn btn-primary">Primary</button>
            <button type="button" class="btn btn-secondary">Secondary</button>
        </div>
    </div>
</div>
{{#each books}}
<div class="col-md-4">
    <div class="card mt-3  ">
        <div class="card-header text-white bg-primary">
            <input type="hidden" class="bookId" id="{{_id}}" value="{{_id}}">
            <h4 class="bookTitle">{{title}}</h4>
        </div>
        <div class="card-body">
            <p class="bookAuthor">Author: {{author}}</p>
            <span class="bookIsbn">ISBN: {{isbn}}</span>
        </div>
        <div class="card-footer">
            <button type="button" class="btn btn-primary" name="editBook">
                View Book
                {{!-- <i class="material-icons">view</i> --}}
            </button>
            {{!-- <button type="button" class="btn btn-secondary" name="deleteBook">
                <i class="material-icons">delete</i>
            </button> --}}
        </div>
    </div>
</div>

{{/each}}
<div class="overlay" id="overlay">
    <div class="popup" id="popup">

        <a class="btn-cerrar-popup" id="btn-cerrar-popup">
            <i class="material-icons">close</i>
        </a>
        <div class="card card-body">
            <form action="/books" method="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Book Title" autofocus required>
                </div>
                <div class="form-group">
                    <input type="text" name="author" class="form-control" placeholder="Author Title" required>
                </div>
                <div class="form-group">
                    <input type="text" name="isbn" class="form-control" placeholder="ISBN"
                        pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])">
                </div>
                <button class="btn btn-primary btn-block">
                    save
                </button>
            </form>
        </div>
    </div>
</div>

<script src="js/book.js"></script>